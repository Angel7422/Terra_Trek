
<h1 class="m-4 text-center">Favorites</h1>

<div class="container">
  <div class="row">
    <% @favorites.each do |favorite| %>
      <div class="col-md-4">
        <div class="card favorite-card mb-4 rounded-5 shadow-lg">
          <%= cl_image_tag favorite.activity.pictures.first.key, class: "card-img-top rounded-top-5 border-orange", height: 200, width: '100%', crop: :fill %>
          <div class="card-body d-flex flex-column">

            <%= link_to activity_path(favorite.activity), class: "text-decoration-none text-black" do %>
              <h5 class="card-title fs-3"><%= favorite.activity.name %></h5>
              <p class="card-text"><%= truncate(favorite.activity.description, length: 100) %></p>
              <p class="text-orange fw-bolder">Résérvez maintenant...</p>
            <% end %>

            <%= button_to "Retirez des favoris", activity_favorite_path(favorite.activity, favorite),
                method: :delete, data: {tubro_method: :delete, turbo_confirm: "Etes vous sûr ?"},
                class: "position-absolute bottom-0 end-0 m-2 text-secondary fw-lighter border-none" %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
