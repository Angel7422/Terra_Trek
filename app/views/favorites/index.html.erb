
<h1 class="mb-3 text-center">Favorites</h1>

<div class="container">
  <div class="row">
    <% @favorites.each do |favorite| %>
      <div class="col-md-4">
        <div class="card favorite-card mb-4">
          <%= cl_image_tag favorite.activity.pictures.first.key, class: "card-img-top", height: 200, width: '100%', crop: :fill %>
          <div class="card-body d-flex flex-column">

            <%= link_to activity_path(favorite.activity), class: "text-decoration-none text-black" do %>
              <h5 class="card-title"><%= favorite.activity.name %></h5>
              <p class="card-text"><%= truncate(favorite.activity.description, length: 100) %></p>
              <p class="text-red">Résérvez maintenant...</p>
            <% end %>

            <%= link_to "Retirez des favoris", activity_favorite_path(favorite.activity, favorite), class: "text-decoration-none text-end" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
