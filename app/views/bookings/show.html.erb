<h1><%= @activity.name %></h1>
<p><%= @activity.description %></p>

<% @activity.pictures.each do |picture| %>
  <%= cl_image_tag picture.key, height: 300, width: 400, crop: :fill %>
<% end %>

<div class="booking-details">
  <h1>Réservation</h1>

  <div class="booking-info">
    <p><strong>Pseudo:</strong> <%= @user.nickname %></p>
    <p><strong>E-mail:</strong> <%= @user.email %></p>
    <p><strong>Date début:</strong> <%= @booking.start_date %></p>
    <p><strong>Date de fin:</strong> <%= @booking.end_date %></p>
  </div>

<%= button_to "Supprimer réservation",
              booking_path(@booking),
              method: :delete,
              data: { turbo_method: :delete, turbo_confirm: "Etes-vous sûr de vouloir supprimer cette réservation ?" },
              class: 'delete-button' %>
</div>
