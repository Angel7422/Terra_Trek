
<%#= cl_image_tag @activity.pictures.url %>
<div class="activity-card-show">
    <div class="img-container-activity" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.1)), url(<%= cl_image_path(@activity.pictures.first.key, crop: :fill) %>)">
    </div>

    <div class="img-container-activity" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.1)), url(<%= cl_image_path(@activity.pictures.second.key, crop: :fill) %>)">
    </div>
</div>

<div class="description-activity-show">

  <div class="text-overlay-show-activity left">
    <div class="icon-show-container">
      <div class="title-activity-show">
        <h1 class="title-activity-show"><%= @activity.name %></h1>
      </div>
      <div class="icon-show-activity">
      <i class="icon-show-activity <%= @activity.category_icon %>"></i>
      </div>
      <div class="heartlike">
        <% if @activity.favorite?(current_user) %>
          <%= link_to activity_favorite_path(@activity, current_user.favorite(@activity)), data: { turbo_method: :delete } do %>
            <i class="fas fa-heart"></i>
          <% end %>
        <% else %>
          <%= link_to activity_favorites_path(@activity), data: {turbo_method: :post } do %>
            <i class="far fa-heart"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= @activity.category %>
    <p><%= @activity.description %></p>
  </div>





  <div data-controller="toggle" class='form-container-activity-show form-activity-show right'>
    <!--<button class="btn btn-primary mb-3" data-action="click->toggle#fire">RÃ©server</button>-->
    <div data-toggle-target="togglableElement">
        <%= render "form", booking: @booking %>
    </div>

    <%# <% if @user.favorited?(@activity) %>
      <%# <p>This activity is in your favorites.</p> %>
    <%# <% else %>
      <%# <%= link_to 'Add to Favorites', favorite_path(activity_id: @activity.id), method: :post %>
    <%# <% end %>

  </div>
</div>
